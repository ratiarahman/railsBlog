<h1>List of Articles</h1>
<h3>The blog has <%= Article.public_count %> public assigned articles and counting more!
</h3>
<ul>
    <% @articles.each do |article| %>
        <% unless article.archived? %>
            <li>
                <%= link_to article.title, article %>
                <%= article.status %>
            </li>
        <% end %>
    <% end %>
</ul>

<%= link_to "Create New Article", new_article_path %>


<%# comment out %>
<% if false %>
    <li>
        <a href="/articles/<%= article.id %>">
            <%= article.title %>
        </a>
    </li>
    <li>
        <a href="<%= article_path() %>">
            <%= article.title %>
        </a>
    </li>
<% end %>